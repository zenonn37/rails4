<%=simple_form_for :post, url: posts_path do |f|%>

		<%if @post.errors.any?%>
		<div class="form_errors">

			<h2><%= pluralize(@post.errors.count, "error")%>
				prohibited this post from being saved</h2>
				<ul>

                <%@post.errors.full_messages.each do |msg|%>
                  <li><%=msg%></li>
                  <%end%>
				</ul>


		</div>

		<%end%>

		<%=f.input :title%>
		<%=f.input :text%>
		<%=f.button :submit%>


		<%end%>